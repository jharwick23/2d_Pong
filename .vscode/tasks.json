{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Build SFML Project",
          "type": "shell",
          "command": "g++",  
          "args": [
              "-g",
              "pong.cpp",
              "-o",
              "pong",
              "-lsfml-graphics",
              "-lsfml-window",
              "-lsfml-system",
              "-lsfml-audio"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"]
      }
  ]
}
